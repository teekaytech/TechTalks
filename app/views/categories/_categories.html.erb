<div class="row">
  <table class="table table-striped t-color">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category Name</th>
        <th scope="col">Number of Articles</th>
        <th scope="col">Show Articles</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= category.name %></td>
          <td><%= category.articles.size %></td>
          <td>
            <%= link_to "View #{category.name} articles", category_path(category), class: 'badge badge-light'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
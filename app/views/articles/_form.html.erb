<%= form_for([current_user, @article], html: {multipart: true}) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
  
      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title,
                required: true,
                autofocus: true, autocomplete: "title", class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :Body %>
      <%= f.text_area :text,
                required: true, autocomplete: "text", class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :Categories, 'Select a Category' %><br />
      <% categories.each do |category| %>
        <%= check_box_tag("categories[#{category.id}]", category.id) %>
        <%= label_tag(category.name) %> 
      <% end %>
    </div>
  </div>
  <p>
    <%= f.label :image, 'Attach the article image' %><br />
    <%= f.file_field :image, required: true, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit "Create Article" %>
  </p>
<% end %>

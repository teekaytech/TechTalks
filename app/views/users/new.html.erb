<h2 class="text-center">New user registration page</h2>
<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'users/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'mb-4 form-control' %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'mb-4 form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'mb-4 form-control' %>

      <%= f.submit "Create my account", class: "mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>